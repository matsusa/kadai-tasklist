<h1>タスク一覧</h1>

  <% if logged_in? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>ステータス</th>
          <th>タスク</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <th><%= link_to task.id, task %></th>
            <th><%= task.status %></th>
            <th><%= task.content %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>

  <p>ログイン完了ユーザー： <%= current_user.name %></p>
<% else %>
   <h1>TaskList</h1>
  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %> 
<% end %>
